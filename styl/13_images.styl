/*Images*/
.image-left {
	float: left;
	margin: 0 var(floatingMargin) var(floatingMargin) 0;
}
.image-right {
	float: right;
	margin: 0 0 var(floatingMargin) var(floatingMargin);
}
.image-left img,
.image-right img {
	position: relative;
	top: .4em;
}
.image-centered {
	text-align: center;
}
.image-container {
	clear: fix;
}
.image-content {
	overflow: hidden;
}
