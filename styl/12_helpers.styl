/*Goodies*/
.first-letter::first-letter {
	font-size: 4em;
	line-height: 0.75em;
	float: left;
	position: relative;
	padding-right: 6px;
	margin-top: -2px;
	font-weight: normal;
	color: var(colorBody);
}
.supersmall {
	font-size: var(superSmallFontSize);
}
.small {
	font-size: var(smallFontSize);
}
.big {
	font-size: var(bigFontSize);
}
input.big {
	padding: 2px 0;
	font-size: var(bigFontSize);
}
.text-centered {
	text-align: center;
}
.text-right {
	text-align: right;
}
.text-uppercase {
	text-transform: uppercase;
}
.nowrap {
	white-space: nowrap;
}
.zero {
	margin: 0 !important;
	padding: 0 !important;
}
.clear {
	clear: both;
}
.last {
	margin-right: 0 !important;
}
.pause {
	margin-bottom: 0.75em !important;
}
.end {
	margin-bottom: 0 !important;
}
.handle {
	cursor: move;
}
.normal {
	font-weight: normal;
}
.bold {
	font-weight: bold;
}
.italic {
	font-style: italic;
}
.req,
.required {
	font-weight: normal;
	color: var(colorRed);
}
.highlight {
	background-color: var(colorWhite) !important;
}
.close {
	padding: 4px 6px;
	line-height: 1;
	font-size: 18px;
	cursor: pointer;
	color: var(colorBlack);
	text-decoration: none;
	opacity: 0.4;
}

.close:before {
	content: '\00D7';
}
.close:hover {
	color: var(colorBlack);
	opacity: 1;
}

.clearfix {
  *zoom: 1;
}

.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}

.clearfix:after {
  clear: both;
}
